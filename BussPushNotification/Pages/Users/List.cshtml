@page
@model BussPushNotification.Pages.Users.ListModel
@{
    Layout = "_Layout.cshtml";
}
<table class="table table-sm table-bordered">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
    </tr>
    @if (Model.Users.Count() == 0)
    {
        <tr>
            <td colspan="4" class="text-center">No users</td>
        </tr>
    }
    else
    {
        foreach(IdentityUser user in Model.Users)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td class="text-center">
                    <form asp-page="List" method="post">
                        <input type="hidden" name="Id" value="@user.Id">
                        <a class="btn btn-sm btn-warning" 
                        asp-page="Editor" 
                        asp-route-id="@user.Id"
                        asp-route-mode="edit">
                            Edit
                        </a>
                        <button type="submit"
                            class="btn btn-sm btn-danger">
                        </button>
                    </form>
                </td>
            </tr>
        }
    }
</table>
<a class="btn btn-primary" href="Create">Create</a>
