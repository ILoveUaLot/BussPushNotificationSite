@model Account
<div class="container py-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h4>User Profile</h4>
            <hr>
            <form method="post">
                <div class="form-group">
                    <label>Profile Picture</label>
                    <div class="mb-3">
                        <img class="img-thumbnail" id="profileImage" alt="User Image" style="width: 500px; height: 500px;">
                        <input type="file" id="imageUpload" hidden>
                    </div>
                </div>
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" class="form-control" asp-for="UserName">
                </div>
                <div class="form-group">
                    <label for="email">Email address</label>
                    <input type="email" class="form-control" asp-for="UserEmail" />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" asp-for="UserPassword">
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</div>
